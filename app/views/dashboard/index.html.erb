
<h1 style="text-align: center" class="mt-4">Welcome <%= @user[:email] %></h1>
  
<div class="row justify-content-between">

  <div class="col-7 mt-5">
    <div class="mt-4 border border-primary p-4 mb-5 ml-5">
      <span class="">
        <h5 class= "mb-3">There is nothing to display at this time. Search cities to add to your favorites!</h5>
          <img src="https://images.pexels.com/photos/374870/pexels-photo-374870.jpeg" alt="" style="width: 100%; opacity: 70%">
      </span>
    </div>
  </div>

  <div class="col-4 mt-4 mr-5">
    <h2 class="mt-4">City Favorites</h2><hr>
    <% if !@favorites.nil? %>
      <% @favorites.each do |favorite| %>
        <ol>
          <div class="card" style="width: 18rem;">
            <img src="https://classroomclipart.com/images/gallery/Clipart/Environment/TN_pollution-free-electric-car-driving-on-city-street-clipart.jpg" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-text"><%= sanitize favorite.summary %></p>
              <button><%= button_to "Delete City", dashboard_path(favorite.id), method: :delete %></button>
            </div>
          </div>
        </ol>
      <% end %>
    <% else %>
      <p>Search cities to add to your favorites!</p>
    <% end %>
  </div>

</div>
